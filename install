#!/bin/bash

BASHKIT_INSTALL="$HOME/.bashkit"
BASHKIT_REPO=git://github.com/mafintosh/bashkit.git

[ -e $BASHKIT_INSTALL ] && echo already installed && exit 0

git clone $BASHKIT_REPO $BASHKIT_INSTALL
mkdir -p $BASHKIT_INSTALL/bin
mkdir -p $BASHKIT_INSTALL/apps

ln -s $BASHKIT_INSTALL/bashkit $BASHKIT_INSTALL/bin/bashkit

BASH_PROFILE="$HOME/.bashrc"
[ ! -e $BASH_PROFILE ] && BASH_PROFILE="$HOME/.bash_profile"

cat $BASH_PROFILE 2> /dev/null | grep "## bashkit installation ##" > /dev/null && echo already linked && exit 0

printf '\n## bashkit installation ##\n[ -e %s ] && . %s\n' $BASHKIT_INSTALL/bashrc $BASHKIT_INSTALL/bashrc >> $BASH_PROFILE
echo installation complete
